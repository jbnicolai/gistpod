#!/usr/bin/env node

var gist = require('../')
  , Helpers = require('../lib/helpers')

var program = require('commander')
program.parse(process.argv)


if (program.args.length < 1) {
    Helpers.CLI.dieError('Missing argument: GitHub username')
}
else
{
    var username = program.args[0]

    gist.writeValueToConfig('username', username, function (err, raw_url) {
        if (err) { Helpers.CLI.dieError(err) }
        else     { Helpers.CLI.print('GitHub username set.') }
    })
}


